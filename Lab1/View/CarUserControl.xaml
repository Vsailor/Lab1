<UserControl x:Class="Lab1.View.CarUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab1.View"
             mc:Ignorable="d" Width="200" Height="100">
    <Border BorderBrush="Black" BorderThickness="4">
        <Grid Background="Green">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Margin="10,10,0,0">ВАЗ</TextBlock>
            <TextBlock Grid.Row="1" Margin="10,10,0,0">Седан</TextBlock>
            <TextBlock Grid.Row="2" Margin="10,10,0,0">160</TextBlock>
        </Grid>
    </Border>
</UserControl>
